<?xml version="1.0"?>
<config>
    <modules>
        <Datadrivendesign_Knowledgebase>
            <version>0.1.0</version>
        </Datadrivendesign_Knowledgebase>
    </modules>
    <frontend>
        <routers>
            <knowledgebase>
                <use>standard</use>
                <args>
                    <module>Datadrivendesign_Knowledgebase</module>
                    <frontName>knowledgebase</frontName>
                </args>
            </knowledgebase>
        </routers>
        <layout>
            <updates>
                <knowledgebase>
                    <file>knowledgebase.xml</file>
                </knowledgebase>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<knowledgebase>
				<use>admin</use>
				<args>
					<module>Datadrivendesign_Knowledgebase</module>
					<frontName>knowledgebase</frontName>
				</args>
			</knowledgebase>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<datadrivendesign>
				<title>Data Driven Design</title>
				<sort_order>71</sort_order>               
				<children>
					<knowledgebase module="knowledgebase">
						<title>Knowledge Base</title>
						<sort_order>0</sort_order>
						<action>knowledgebase/adminhtml_knowledgebase</action>
					</knowledgebase>
				</children>
			</datadrivendesign>
		</menu>
		<acl>
			<resources>				
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<knowledgebase_options>
		 									<title>Knowledgebase Module</title>
											<sort_order>10</sort_order>
										</knowledgebase_options>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<knowledgebase>
					<file>knowledgebase.xml</file>
				</knowledgebase>
			</updates>
		</layout>
    </adminhtml>
    <global>
        <models>
            <knowledgebase>
                <class>Datadrivendesign_Knowledgebase_Model</class>
                <resourceModel>knowledgebase_resource</resourceModel>
            </knowledgebase>
            <knowledgebase_resource>
                <class>Datadrivendesign_Knowledgebase_Model_Resource</class>
                <entities>
                    <document>
                        <table>datadrivendesign_knowledgebase_document</table>
                    </document>	
                </entities>
            </knowledgebase_resource>
        </models>
        <resources>
            <knowledgebase_setup>
                <setup>
                    <module>Datadrivendesign_Knowledgebase</module>
					<class>Datadrivendesign_Knowledgebase_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </knowledgebase_setup>
            <knowledgebase_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </knowledgebase_write>
            <knowledgebase_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </knowledgebase_read>
        </resources>
        <blocks>
            <knowledgebase>
                <class>Datadrivendesign_Knowledgebase_Block</class>
            </knowledgebase>
        </blocks>
        <helpers>
            <knowledgebase>
                <class>Datadrivendesign_Knowledgebase_Helper</class>
            </knowledgebase>
        </helpers>
    </global>
</config>